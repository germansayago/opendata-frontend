<!-- index.njk -->
{% extends "layout.njk" %}

{% block content %}
<div class="masterhead masterhead-home">
  <div class="container">
    <div class="row">

      <div class="col-12 col-md-8 masterhead-splash ">
        <h1>Datasets</h1>
        <form class="masterhead-form">
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text"> <i class="fas fa-fw fa-lg fa-search"></i> </span>
            </div>
            <input type="text" class="form-control" placeholder="Que estás buscando?">
          </div>
        </form>
      </div>

      <div class="col-12 col-md-4 masterhead-data parent">
        <div class="count">67</div>
        <p>Conjunto de Datos</p>
      </div>

    </div>
  </div>
</div>

<section class="dataset">
  <div class="container">

    <div class="mb-4 pb-2">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="./">Inicio</a></li>
          <li class="breadcrumb-item active" aria-current="page">Datasets</li>
        </ol>
      </nav>
    </div>

    <div class="row">
      <div class="col-12 col-md-4 mb-5 sidebar">

        {% macro accordion(args) %}

        {% endmacro %}

        <div class="accordion" id="accordionMenu">
          {% for i in range(1,4) %}
          <div class="card">
            <a href="#" data-toggle="collapse" data-target="#collapse{{ i }}" aria-expanded="true" aria-controls="collapse{{ i }}" data-parent="#accordionMenu" class="bg-light text-dark" >
              <div class="card-header" id="heading{{ i }}">
                Item #{{ i }}
              </div>
            </a>
            <div id="collapse{{ i }}" class="collapse {% if i == 1 %}show{% endif %}" aria-labelledby="heading{{ i }}" data-parent="#accordionMenu">
              <ul class="list-group list-group-flush">
               <li class="list-group-item">Cras justo odio</li>
               <li class="list-group-item">Dapibus ac facilisis in</li>
               <li class="list-group-item">Vestibulum at eros</li>
             </ul>
            </div>
          </div>
          {% endfor %}
        </div>        
      </div>
      <div class="col-12 col-md-8 content">

        <div class="row mb-3">
          <div class="col-12 col-sm-6 col-md-4 order-sm-last">
            <form class="" action="index.html" method="post">
              <div class="form-group">
                <select name="" class="form-control">
                  <option value="">Ultimas actualizaciones</option>
                  <option value="">Ascendente A-Z</option>
                  <option value="">Descendente Z-A</option>
                </select>
              </div>
            </form>
          </div>
          <div class="col-12 col-sm">
              <h3>Titulo de la categoría</h3>
          </div>
        </div>

        {% for item in range(1,6) %}
        <div class="card mb-3">
          <a href="recursos.html">
            <div class="card-body">
              <h4 class="card-title mb-1">
                  Titulo del dataset
              </h4>
              <div class="text-secondary mb-2">Lorem ipsum dolor sit amet / Lorem ipsum dolor / Lorem ipsum dolor</div>
              <p class="card-text text-dark visible-sm">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
            </div>
          </a>
          <div class="card-footer">
            <div class="row">
              <div class="col mb-1">
                <a href="#" title="Economía y Finanzas">
                  <i class="fas fa-fw fa-lg fa-coins text-muted"></i>
                </a>
                <a href="#" title="Tecnología e Innovación">
                  <i class="fas fa-fw fa-lg fa-code-branch text-muted"></i>
                </a>
              </div>
              <div class="col-sm-auto text-sm-right text-uppercase">
                <span class="badge badge-success" title="csv">csv</span>
                <span class="badge badge-success" title="excel">excel</span>
                <span class="badge badge-danger" title="pdf">pdf</span>
                <span class="badge badge-primary" title="word">word</span>
                <span class="badge badge-info" title="kml">kml</span>
                <span class="badge badge-info" title="gml">gml</span>
                <span class="badge badge-dark" title="json">json</span>
                <span class="badge badge-dark" title="api">api</span>
                <span class="badge badge-warning" title="gml">otro</span>
              </div>
            </div>
          </div>
        </div>
        {% endfor %}

        <div class="mb-5 pt-4">
          <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
              <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1">
                  <i class="fas fa-fw fa-lg fa-caret-left"></i>
                </a>
              </li>
              <li class="page-item"><a class="page-link" href="#">1</a></li>
              <li class="page-item"><a class="page-link" href="#">2</a></li>
              <li class="page-item"><a class="page-link" href="#">3</a></li>
              <li class="page-item">
                <a class="page-link" href="#">
                  <i class="fas fa-fw fa-lg fa-caret-right"></i>
                </a>
              </li>
            </ul>
          </nav>
        </div>

      </div>
    </div>
  </div>
</section>
{% endblock %}

{% block js %}{% endblock %}
